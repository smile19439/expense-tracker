<form action="/record/{{record._id}}?_method=PUT" method="POST">
  <div class="container mt-3">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">
        {{> message}}
        
        <div class="d-flex">
          <div class="me-5">*必填欄位</div>
          <div>請修改你的支出</div>
        </div>

        <div class="input-group mt-3 mb-3">
          <label for="name" class="text-secondary me-5">名稱*：</label>
          <input type="text" placeholder="請輸入名稱..." name="name" id="name" class="form-control" value="{{record.name}}">
        </div>

        <div class="input-group mb-3">
          <label for="date" class="text-secondary me-5">日期*：</label>
          <input type="date" name="date" id="date" class="form-control" value="{{record.date}}">
        </div>

        <div class="input-group mb-3">
          <label for="category" class="text-secondary me-5">類別*：</label>
          <select name="category" id="category" class="form-control">
            {{#each categories}}
              <option value="{{this.name}}" {{#if this.isSelected}}selected{{/if}}>{{this.name}}</option>
            {{/each}}
          </select>
        </div>

        <div class="input-group mb-3">
          <label for="amount" class="text-secondary me-5">金額*：</label>
          <input type="number" min="0" placeholder="請輸入金額..." name="amount" id="amount" class="form-control"
            value="{{record.amount}}">
        </div>

        <div class="d-flex justify-content-end">
          <button type="submit" class="btn btn-create">送出</button>
        </div>

      </div>
    </div>
  </div>
</form>